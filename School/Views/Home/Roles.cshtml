@model IEnumerable<Role>

@{
    ViewData["Title"] = " قوانین و مقررات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="blog" class="single section page">
    <div class="container">
        <div class="row">
            <form asp-controller="Home" asp-action="Roles" method="post">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="blog-comments" style="height:auto !important">

                        <div style="padding: 10px 10px"><h3>@ViewBag.Title</h3></div>
                        <div style="height: auto;padding-bottom:100px">
                            @foreach (var item in Model)
                            {
                                <div class="text-justify">@item.Title</div>
                                <br />
                            }
                            <br />
                            <div class="mt-6 col-md-12">
                                <div class="mt-2 col-md-12">
                                    <div class="mt-05">
                                        <input value="1" name="acceptedrole" type="checkbox"><span class="@ViewBag.checkbox"> شرایط فوق را به صورت کامل مطالعه و با آگاهی کامل مفاد آن را تایید می نمایم  .</span>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-12 col-xs-12 pull-left">
                                    <input type="submit" class="btn btn-success btn-block" value="ثبت نام">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>


