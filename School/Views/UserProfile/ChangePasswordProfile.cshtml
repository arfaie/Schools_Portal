@using School.ViewModels;
@model AdminChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePasswordProfile";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


<div id="main">
    <div class="col-lg-4 col-md-6 col-xs-12 mx-auto">
        <div class="account-box">
            <span class="account-head-line">تغییر رمز عبور</span>
            <form asp-controller="UserProfile" asp-action="ChangePasswordProfile" method="post">
                <div class="content-account">
                    <label for="password">رمز عبور قبلی</label>
                    <input type="password" asp-for="OldPassword" class="input-password" placeholder="رمز عبور خود را وارد نمایید"><i class="mdi mdi-lock" style="top: 55px;"></i>
                    <label for="password">رمز عبور جدید</label>
                    <input type="password" asp-for="NewPassword" class="input-password" placeholder="رمز عبور خود را وارد نمایید"><i class="mdi mdi-lock" style="top: 146px;"></i>
                    <label for="password">تکرار رمز عبور جدید</label>
                    <input type="password" asp-for="ConfirmNewPassword" class="input-password" placeholder="رمز عبور خود را وارد نمایید"><i class="mdi mdi-lock" style="top: 237px;"></i>
                    <input type="hidden" name="redirectUrl" value="@Url.Action("Index","UserProfile")" />
                    <div class="parent-btn">
                        <button type="submit" class="dk-btn dk-btn-info">
                            تغییر رمز عبور
                            <i class="fa fa-refresh sign-in"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

