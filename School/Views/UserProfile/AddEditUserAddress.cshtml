                                </div>
                                <div class="form-legal-item">
                                    <label for="phone">
                                        شماره موبایل
                                        <span class="required-star" style="color:red;">*</span>
                                    </label>
                                    <input type="number" asp-for="@Model.Mobile" value="@Mobile" class="input-code-national" placeholder="09xxxxxxxxx">
                                    <span asp-validation-for="Mobile" class="text-danger"></span>
                                </div>
                                <div class="form-legal-item">
                                    <label for="phone">
                                        شماره تلفن ثابت
                                        <span class="required-star" style="color:red;">*</span>
                                    </label>
                                    <input type="number" asp-for="@Model.Phone" value="@Phone" class="input-code-national" placeholder="021xxxxxx">
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                <div class="form-legal-item">
                                    <label for="phone">
                                        کد پستی
                                        <span class="required-star" style="color:red;">*</span>
                                    </label>
                                    <input type="number" asp-for="@Model.PostalCode" value="@PostalCode" class="input-code-national" placeholder="کد پستی را وارد نمایید">
                                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                                </div>
                                <div class="form-legal-item">
                                    <label for="selectric">
                                        استان و شهر
                                        <span class="required-star" style="color:red;">*</span>
                                    </label>
                                    <select asp-items="@ViewBag.States">
                                        <option value="date-desc" selected="selected" disabled="disabled">استان</option>
                                    </select>
                                    <select asp-for="@Model.CityId" asp-items="@ViewBag.Cities">
                                        <option value="date-desc" selected="selected" disabled="disabled">شهر</option>
                                    </select>
                                    <span asp-validation-for="CityId" class="text-danger"></span>
                                </div>
                                <div class="form-legal-item">
                                    <label>
                                        آدرس
                                        <span class="required-star" style="color:red;">*</span>
                                    </label>
                                    <input type="text" asp-for="@Model.Description" value="@Description" class="input-name-checkout" placeholder="آدرس خود را وارد نمایید" style="height:80px;">
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <input type="hidden" name="redirectUrl" value="@Url.Action("userAddress","UserProfile")" />

                            </fieldset>
                        </div>
                    </div>
                </div>

                <div class="form-legal-row-submit" style="margin-top: 1px;">
                    <div class="parent-btn">
                        <button type="submit" class="dk-btn dk-btn-info">
                            @btnName
                            <i class="fa fa-check sign-in"></i>
                        </button>
                    </div>
                    <a asp-controller="UserProfile" asp-action="userAddress" class="btn-default">انصراف</a>
                </div>

            </div>
        </form>

    </div>
</div>*@

