    <link rel="wlwmanifest" type="application/wlwmanifest+xml" href="~/wp-includes/wlwmanifest.xml">
    <link rel="stylesheet" href="~/wp-content/themes/business-portfolio/rtl.css" type="text/css" media="screen">
    <meta name="generator" content="WordPress 4.8.5">
    <link rel="canonical" href="index.htm">
    <link rel='shortlink' href='index.htm'>


    <style type="text/css">
        .recentcomments a {
            display: inline !important;
            padding: 0 !important;
            margin: 0 !important;
        }
    </style>
    <style type="text/css">
        .site-title,
        .site-description {
            position: absolute;
            clip: rect(1px, 1px, 1px, 1px);
        }
    </style>
</head>
<body>
    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-2 col-sm-12 col-xs-12">
                    <!-- Logo -->
                    @await Component.InvokeAsync("MainSettingLogo")
                    <!--/ End Logo -->
                </div>
                <div class="col-md-10 col-sm-12 col-xs-12">
                    <div class="nav-area">
                        <!-- Main Menu -->
                        <nav class="mainmenu">
                            <div class="mobile-nav"></div>
                            <div class="collapse navbar-collapse">
                                <div id="bs-example-navbar-collapse-1" class="collapse navbar-collapse">
                                    <ul id="menu-%d8%a7%d8%b5%d9%84%db%8c-%d8%aa%da%a9-%d8%b5%d9%81%d8%ad%d9%87" class="nav navbar-nav ml-auto">
                                        <li itemscope="itemscope" id="menu-item-676" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-home current-menu-item page_item page-item-42 current_page_item menu-item-676 active"><a title="خانه" href="#j-slider">خانه</a></li>
                                        <li itemscope="itemscope" id="menu-item-677" class="menu-item menu-item-type-custom menu-item-object-custom menu-item-677"><a title="درباره‌ ما" href="/Home/#services">خدمات ما</a></li>
                                        <li itemscope="itemscope" id="menu-item-679" class="menu-item menu-item-type-custom menu-item-object-custom menu-item-679"><a title="درباره ما" href="/Home/#why-choose">درباره ما</a></li>
                                        <li itemscope="itemscope" id="menu-item-682" class="menu-item menu-item-type-custom menu-item-object-custom menu-item-682"><a title="نمونه‌ کارهای ما" href="/Home/#portfolio">گالری تصاویر</a></li>
                                        <li itemscope="itemscope" id="menu-item-680" class="menu-item menu-item-type-custom menu-item-object-custom menu-item-680"><a title="تماس با ما" href="/Home/#contact">تماس با ما</a></li>
                                        <li itemscope="itemscope" id="menu-item-680" class="menu-item menu-item-type-custom menu-item-object-custom menu-item-680"><a title="ثبت نام" asp-controller="Home" asp-action="Roles">ثبت نام</a></li>
                                        @if (!SignInManager.IsSignedIn(User))
                                        {
                                            <li itemscope="itemscope" id="menu-item-680" class="menu-item menu-item-type-custom menu-item-object-custom menu-item-680"><a title="ورود" asp-controller="Account" asp-action="Login">ورود</a></li>
                                        }
                                        else
                                        {
                                            <li itemscope="itemscope" id="LogOut" class="menu-item menu-item-type-custom menu-item-object-custom menu-item-680"><a href="#" id="btnLogOut" title="خروج">خروج</a></li>
                                        }
                                        <li itemscope="itemscope" id="menu-item-680" class="menu-item menu-item-type-custom menu-item-object-custom menu-item-680"><a title="پروفایل" asp-controller="UserProfile" asp-action="Index">پروفایل</a></li>

                                    </ul>
                                </div>
                            </div>
                        </nav>
                        <!--/ End Main Menu -->
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div>
        <main>
            @RenderBody()
        </main>
    </div>
    <form style="display:none" asp-controller="Account" asp-action="Logout" id="logoutForm">
        <button id="btnLogout" type="submit" class="profile-box-tab-sign-out"><span class="mdi mdi-power"></span>خروج از حساب</button>
    </form>
    <footer id="footer" class="wow fadeIn">
        <!-- Footer Top -->
        <!--/ End Footer Top -->
        <!-- Copyright -->
        <div class="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="text">
                            <p>اجرا شده توسط: <a href="http://punas.ir" target="_blank">پوناس</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ End Copyright -->
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type='text/javascript' src='~/wp-content/plugins/contact-form-7/includes/js/scripts.js'></script>
    <script type='text/javascript' src='~/wp-content/themes/business-portfolio/assets/js/bootstrap.js'></script>
    <script type='text/javascript' src='~/wp-content/themes/business-portfolio/assets/js/jquery.appear.js'></script>
