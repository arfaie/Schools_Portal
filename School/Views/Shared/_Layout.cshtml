    <script type='text/javascript' src='~/wp-content/themes/business-portfolio/assets/js/jquery.scrollUp.js'></script>
    <script type='text/javascript' src='~/wp-content/themes/business-portfolio/assets/js/jquery.slicknav.js'></script>
    <script type='text/javascript' src='~/wp-content/themes/business-portfolio/assets/js/modernizr.js'></script>
    <script type='text/javascript' src='~/wp-content/themes/business-portfolio/assets/js/owl.carousel.js'></script>
    <script type='text/javascript' src='~/wp-content/themes/business-portfolio/assets/js/typed.js'></script>
    <script type='text/javascript' src='~/wp-content/themes/business-portfolio/assets/js/waypoints.js'></script>
    <script type='text/javascript' src='~/wp-content/themes/business-portfolio/assets/js/wow.js'></script>
    <script type='text/javascript' src='~/wp-content/themes/business-portfolio/assets/js/ytplayer.js'></script>
    <script type='text/javascript' src='~/wp-content/themes/business-portfolio/assets/js/jquery.matchHeight.js'></script>
    <script type='text/javascript' src='~/wp-content/themes/business-portfolio/assets/js/main.js'></script>
    <script type='text/javascript' src='~/wp-includes/js/wp-embed.min.js'></script>
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script>
        var logout = $('#LogOut');
        var btnLogout = $('#btnLogout');
        logout.on("click", function () {
            btnLogout.click();
        });
    </script>
    @RenderSection("Scripts", required: false)


</body>
</html>
