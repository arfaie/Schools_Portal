                <div class="single-service active">
                    <i class="fa fa-send"></i>
                    <h2>@Model.Service3</h2>
                    <p>@Model.Service3Des</p>
                </div>
                <!-- End Single Service -->
            </div>

            <div class="col-md-3 col-sm-6 col-xs-12 wow fadeIn" data-wow-delay="0.4s">
