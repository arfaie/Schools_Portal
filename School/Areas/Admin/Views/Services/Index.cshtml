@model IEnumerable<Services>

@{
    ViewBag.Title = "سرویس ها";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div style="color:white;text-align:center" class=@TempData["css"]>
    @if (TempData["notice"] != null)
    {
        <p>@TempData["notice"]</p>
    }
</div>
<div class="layout-content-body">
    <div class="row gutter-xs">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-actions">
                        <button type="button" class="card-action card-toggler" title="Collapse"></button>
                        <button type="button" class="card-action card-reload" title="Reload"></button>
                        <button type="button" class="card-action card-remove" title="Remove"></button>
                    </div>
                    <strong>@ViewBag.Title</strong>
                </div>

                <div class="card-body">

                    <div class="md-form-group md-label-floating col-md-6">
                        <div class="md-form-group md-label-floating col-md-6">
                            <input class="md-form-control" type="text" name="name" id="serachInput" spellcheck="false" required="" aria-required="true">
                            <label class="md-control-label">جستجو</label>
                        </div>
                    </div>
                    <div class="md-form-group md-label-floating col-md-6">
                        <div class="margin-top">
                            <div class="col-xs-6 col-md-6">
                                <a class="btn btn-primary marginbutoom" id="showBrand" data-toggle="modal" asp-action="AddEdit"
                                   data-target="#modal-action">
                                    <i class="glyphicon glyphicon-plus"></i>
                                    افزودن سرویس جدید
                                </a>
                            </div>
                        </div>
                    </div>
                    <table id="example" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>کد</th>
                                <th>@Html.DisplayNameFor(model => model.Title)</th>
                                <th>@Html.DisplayNameFor(model => model.Description)</th>
                                <th>@Html.DisplayNameFor(model => model.Service1)</th>
                                <th>@Html.DisplayNameFor(model => model.Service2)</th>
                                <th>@Html.DisplayNameFor(model => model.Service3)</th>
                                <th>@Html.DisplayNameFor(model => model.Service4)</th>
                                <th>@Html.DisplayNameFor(model => model.Service1Des)</th>
                                <th>@Html.DisplayNameFor(model => model.Service2Des)</th>
                                <th>@Html.DisplayNameFor(model => model.Service3Des)</th>
                                <th>@Html.DisplayNameFor(model => model.Service4Des)</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var i = 1;
                                foreach (var item in Model)
                                {

                                    <tr>
                                        <td>@(i++)</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.Service1</td>
                                        <td>@item.Service2</td>
                                        <td>@item.Service3</td>
                                        <td>@item.Service4</td>
                                        <td>@item.Service1Des</td>
                                        <td>@item.Service2Des</td>
                                        <td>@item.Service3Des</td>
                                        <td>@item.Service4Des</td>

                                        <td>
                                            <a class="btn btn-info" id="editagency" data-toggle="modal" asp-action="AddEdit"
                                               data-target="#modal-action" asp-route-id="@item.Id">
                                                <i class="glyphicon glyphicon-pencil"></i>
                                                ویرایش
                                            </a>

                                            <a class="btn btn-danger" id="showagency" data-toggle="modal" asp-action="Delete"
                                               data-target="#modal-action" asp-route-id="@item.Id">
                                                <i class="glyphicon glyphicon-trash"></i>
                                                حذف
                                            </a>

                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="progress" class="addModal">
    <div class="addCenter">
        <img src="~/images/loading.gif" />
    </div>
</div>
<div id="infoModalAlertColored" tabindex="-1" role="dialog" class="modal fade">

</div>
<div id="successModalAlert" tabindex="-1" role="dialog" class="modal fade">

</div>

@await Html.PartialAsync("_Modal", new BootstrapModel { Id = "modal-action", Size = ModalSize.Medium })

@section Scripts{

}

